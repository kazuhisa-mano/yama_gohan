<h2>投稿詳細</h2>
<div class="show">
  <div class="show-field">
    <%= attachment_image_tag @post, :image, format: 'jpeg', size: "350x250", fallback: "no_image.jpg" %></br>
  </div>
  <div class="show-field">
    <%= @post.name %>
  </div>
  <div class="show-field">
    <%= simple_format(@post.material) %>
  </div>
  <div class="show-field">
    <%= simple_format(@post.recipe) %>分
  </div>
  <div class="show-field">
    <%= @post.cooking_time %>分
  </div>
  <div class="show-field">
    <%= @post.tags.pluck(:tag_name) %>
  </div>  
</div>
<% if @post.user == current_user %>
  <%= link_to "編集", edit_post_path(@post.id) %>
  <%= link_to "削除", post_path(@post.id), method: :delete %>
<% end %>

